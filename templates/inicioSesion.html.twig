{% extends "main/layout.html.twig" %}
{% block archivospropios %}
	{% block title %}Inicio Sesion
	{% endblock %}
	<link rel="stylesheet" href="./css/estilosInicioSesion.css">
	<script src="./js/scriptInicioSesion.js"></script>
{% endblock %}
{% block contenido %}
	<div class="content-wrap">
		<section id="login" class="clearfix">
			<div class="col-6 justify-content-center offset-3" id="cardG">
				<div class="card card-4">
					{% if malobien == true %}
						<p style="color:#d9534f;">Este usuario no esta registrado o los datos introducidos no son correctos.</p>
					{% endif %}
					{{form_start(form, {'attr':{'class':"col-8 offset-2", "action":""}})}}
					<label for="dni">Tu DNI *</label><br>
					{{form_widget(form.dni, {'attr':{'class':'form-control', 'placeholder':'dni', 'id':'dni', 'required':''}})}}
					<p style="color:#d9534f;" id="errorEmail"></p>
					<label for="password">Tu Contraseña *</label>
					{{ form_widget(form.password, {'attr':{'class':'form-select', 'placeholder':'Contraseña', 'id':'password', 'required':''}}) }}
					<p style="color:#d9534f;" id="errorPassword"></p>
					{{form_widget(form.send, {'attr':{'class':'btn bot', 'placeholder':'Enviar',  'type':'submit', 'onclick':'comprobar()'}})}}
					{# </form> #}
					{{form_end(form)}}
					<p style="color:white;" class="text-center">
						Si no tiene cuenta
						<a href="/registro">registrese aquí.</a>
					</p>
				</form>
			</div>
		</section>
	</div>
