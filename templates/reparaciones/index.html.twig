{% extends "dashboard/layout.html.twig" %}
{% block contenido %}
    <h1>Reparaciones index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TipoReparacion</th>
                <th>Realizacion</th>
                <th>Observaciones</th>
                {% if app.session.get('dni') == "admin" %}
                <th>actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for reparacione in reparaciones %}
            <tr>
                <td>{{ reparacione.id }}</td>
                <td>{{ reparacione.tipoReparacion }}</td>
                <td>{{ reparacione.realizacion }}</td>
                <td>{{ reparacione.observaciones }}</td>
                {% if app.session.get('dni') == "admin" %}
                <td>
                    <a href="{{ path('reparaciones_show', {'id': reparacione.id}) }}">show</a>
                    <a href="{{ path('reparaciones_edit', {'id': reparacione.id}) }}">edit</a>
                </td>
                {% endif %}
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.session.get('dni') == "admin" %}
    <a href="{{ path('reparaciones_new') }}">Create new</a>
    {% endif %}
{% endblock %}
