{% extends "main/layout.html.twig" %}
{% block archivospropios %}
	{% block title %}Registro
	{% endblock %}
	<link rel="stylesheet" href="./css/estilosregistro.css">
	<script src="./js/scriptregistro.js"></script>
{% endblock %}
{% block contenido %}
	<section class="container">
		<article class="row">
			<div class="col-6 justify-content-center offset-3" id="cardG">
				<div class="card card-4">
					<h4 style="color:white;">
						<b>Registro</b>
					</h4>
					<p style="color:#d9534f;" id="errorCredenciales"></p>
					{{form_start(form, {'attr':{'class':"col-8 offset-2", "action":""}})}}
					<label for="nombreCompleto">Tu nombre completo (requerido)</label><br>
					{{form_widget(form.nombreCompleto, {'attr':{'class':'form-control', 'placeholder':'Nombre', 'id':'nombre', 'required':''}})}}
					<label for="email">Tu correo electrónico (requerido)</label><br>
					{{form_widget(form.email, {'attr':{'class':'form-control', 'placeholder':'Email', 'id':'email', 'required':''}})}}
					<label for="dni">Tu DNI (requerido)</label><br>
					{{form_widget(form.dni, {'attr':{'class':'form-control', 'placeholder':'DNI', 'id':'dni', 'required':''}})}}
					<br>
					<label for="password">Tu Contraseña (requerido)</label>
					{{ form_widget(form.password, {'attr':{'class':'form-select', 'placeholder':'Contraseña', 'id':'password', 'required':''}}) }}
					<label for="asunto">Asunto</label><br>
					{{form_widget(form.send, {'attr':{'class':'btn bot', 'placeholder':'Enviar',  'type':'submit', 'onclick':'comprobar()'}})}}
					{# </form> #}
					{{form_end(form)}}
					<p style="color:white;" class="text-center">
						Si ya tiene cuenta
						<a href="/inicioSesion">inicie sesión aquí.</a>
					</p>
